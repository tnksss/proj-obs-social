
<div class="box">
  <div class="box-header">
    <h1>Sessões</h1>
    <%= link_to 'Nova Sessão', new_session_path, class: "btn btn-info" %>
  </div>
  <div class="box-body  table-responsive">
    <table class="table table-bordered table-striped">
      <thead class="">
        <tr>
          <th>Data</th>
          <th>Inicio session</th>
          <th>Fim session</th>
          <th>Notas</th>
          <th>Projetos</th>
          <th colspan="4">Ações</th>
        </tr>
      </thead>

      <tbody>
        <% @sessions.each do |session| %>
          <tr>
            <td><%= session.date.strftime('%d/%m/%Y') %></td>
            <td><%= session.start_session.to_time.strftime('%H:%M') %></td>
            
            <td><%= session.end_session.to_time.strftime('%H:%M') %></td>
            <td><%= session.note %></td>
            <td><%= session.projects.size %></td>

            
            <td><%= link_to '', session, class: "btn btn-warning fa fa-search", title: "Visualizar Sessão" %></td>
            <td><%= link_to '', session_presents_path(session), class: "btn btn-success fa fa-plus", title: "Presentes na Sessão" %>
            <td><%= link_to '', edit_session_path(session.id), class:"btn btn-info fa fa-edit", title: "Editar Sessão"%></td>
            <td><%= link_to '', session, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger fa fa-remove" , title: "Remover Sessão"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= will_paginate @sessions %>
  
