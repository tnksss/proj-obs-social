<p id="notice"><%= notice %></p>

<h1>Projects</h1>
<%= link_to 'New Project', new_project_path, class: "btn btn-info" %>
<table class="table table-striped">  <thead>
    <tr>
      <th>Session</th>
      <th>Name</th>
      <th>Description</th>
      <th>Project kind</th>
      <th>Start project</th>
      <th>End project</th>
      <th>Result</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.session.date.to_time.strftime('%d/%m/%Y')%></td>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.project_kind.kind %></td>
        <td><%= project.start_project.to_time.strftime('%H:%M') %></td>
        <td><%= project.end_project.to_time.strftime('%H:%M') %></td>
        <td><%= project.result %></td>
        <td><%= link_to '', project, class: "btn btn-info fa fa-search" %></td>
        <td><%= link_to '', edit_project_path(project), class: "btn btn-warning fa fa-edit"  %></td>
        <td><%= link_to '', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger fa fa-remove"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


