<p id="notice"><%= notice %></p>

<% provide(:head_title, "Vereadores") %>
<%= link_to 'Adicionar Vereador', new_councilman_path , class: "btn btn-info"%>
<table class="table table-striped">
  <thead >
    <tr>
      <th>Nome</th>
      <th>Apelido</th>
      <th>Partido Politico</th>
      <th>Posição Politica</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @councilmen.each do |councilman| %>
      <tr>
        <td><%= councilman.name %></td>
        <td><%= councilman.nickname %></td>
        <td><%= councilman.political_party %></td>
        <td><%= councilman.political_position %></td>
        <td><%= link_to ' Exibir', councilman, class: "fa fa-search btn btn-info" %></td>
        <td><%= link_to ' Editar', edit_councilman_path(councilman), class: "fa fa-edit btn btn-warning" %></td>
        <td><%= link_to ' Deletar', councilman, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-remove btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


