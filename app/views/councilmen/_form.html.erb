
<%= simple_form_for(@councilman) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :nickname %>
    <%= f.input :political_party %>

       <%= f.file_field :avatar %>

    <%= f.input :political_position, collection: Councilman.political_positions.keys.to_a, prompt: "Informe uma posição"%>  
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
