
<%= simple_form_for(@councilman) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :nickname %>
    <%= f.input :political_party %>

   <%= f.label :image %><br>
   <%= f.file_field :image %>
      <% if f.object.image? %>
      <%= image_tag f.object.image.thumb.url %>
      <%= f.label :remove_image %>
      <%= f.check_box :remove_image %> 
    <% end %>

    <%= f.input :political_position, collection: Councilman.translate_enum_collection(:political_position), prompt: "Informe uma posição"%>  

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
