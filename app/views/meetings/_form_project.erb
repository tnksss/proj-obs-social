
<%= simple_form_for(@project) do |f| %>


  <div class="form-inputs">
    <%= f.input :meeting, disabled: true,value_method: :id, input_html: {value: @meeting.date} %>
    <%= f.association :councilman, label_method: :name, value_method: :id,
                                prompt: "Escolha o vereador" %>
    <%= f.input :name %>
    
    <div class= "form-group">
      <%= f.association :project_kind, label_method: :kind, value_method: :id,
                                prompt: "Escolha o tipo de projeto" %>
    </div>
<%= f.input :description %>
  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Voltar', projects_path, class:"btn btn-warning" %>
  
  
  </div>
<% end %>
