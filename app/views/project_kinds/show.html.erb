
<div class="box box-info">
  <div class="container">
    <div class="box-header">
    <h2>Tipo de Projeto</h2>
    </div>
    <br>
  <h4>
    <strong>Tipo:</strong>
    <%= @project_kind.kind %>
  </h4>
<br>
  <p>
    <strong>Descrição:</strong>
    <%= @project_kind.description %>
  </p>
<br>

  <!-- Projetos pertencentes ao tipo do projeto -->

 <div class="box box-success">
      <div class="box-header with-border">
        <h3 class="box-title text-right">Projetos pertencentes a este tipo de Projeto</h3>
         </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Projeto</th>
                    <th colspan="3">Ações</th>
                  </tr>
                </thead>
                <tbody>
                  <% @project_kind.projects.each do |p| %>
                     <tr>        
                      <td><%= link_to p.name, p %></td>
                      <td><%= link_to '', p, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger fa fa-remove", title:"Remover Projeto"   %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <!-- /.box-body -->



<br>
<%= link_to 'Editar', edit_project_kind_path(@project_kind),  class:"btn btn-warning" %> |
<%= link_to 'Voltar', project_kinds_path, class:"btn btn-info" %>


<br><br>
</div>
</div>




