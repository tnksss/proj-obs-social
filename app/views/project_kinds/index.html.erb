<p id="notice"><%= notice %></p>
<div class="box">
<div class="box-header">
<h1>Tipos de Pauta</h1>
<%= link_to 'Novo Tipo de pauta', new_project_kind_path, class: "btn btn-info" %>
</div>
<div class="box-body table-responsive">
<table class="table table-striped">
<thead>
    <tr>
      <th>Kind</th>
      <th>Description</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @project_kinds.each do |project_kind| %>
      <tr>
        <td><%= project_kind.kind %></td>
        <td><%= project_kind.description %></td>
        <td><%= link_to '', project_kind, class: "btn btn-info fa fa-search" %></td>
        <td><%= link_to '', edit_project_kind_path(project_kind), class: "btn btn-warning fa fa-edit" %></td>
        <td><%= link_to '', project_kind, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger fa fa-remove" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>


