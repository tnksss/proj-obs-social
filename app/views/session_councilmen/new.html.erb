<div class="box">
<div class="box-header">
<h3>Inserir Vereador na sessão</h3>
</div>
<div class="box-body ">
<h5><strong>Data da Sessão: </strong><%= @session %></h5>
<%= simple_form_for(@session_councilman, url: session_presents_path, method: :post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


  <div class="form-inputs">       
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Vereador</th>
          <th>Presença</th>
          <th>Chegada</th>
          <th>Saída</th>
          <th>Anotações</th>
        </tr>
      </thead>

      <tbody>
        <% @councilmen.each do |councilman| %>
          <tr>
            <td><%= councilman.nickname %></td>
            <td><%= f.input :being, input_html: {name: "session_councilman[#{councilman.id}][being]"},  
                    collection: SessionCouncilman.translate_enum_collection(:being),
                    prompt: "Participou desta sessão?"%>  </td>
            <td><%= f.input :note, 
                input_html: {name: "session_councilman[#{councilman.id}][note]",
                             value: councilman_value(@session, councilman, :note)} %> </td>
            <td><%= councilman_value(@session, councilman, :note) %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
</div>


<% end %>

<%= link_to 'Back', sessions_path, class: "btn btn-info" %>
</div>